{
    "vocabulary": "core",
    "condition": [ 
        { "operation": "has-key", "path": [], "value": "$schema" },
        { "operation": "match-pattern", "path": [ "$schema" ], "value": "^http[s]?://json-schema.org/draft-04/schema[#]?$" } 
    ],
    "transform": [
        { "operation": "replace", "path": [ "$schema" ], "value": "http://json-schema.org/draft-06/schema#" } 
    ]
}
